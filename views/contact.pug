extends base

block style 
    style 
        include ../static/stylecontact.css
    
block content
    h1 Contact Us

    form(action="/contact", method = "post", id = "contactform", class = "myform")
        input(type="text", name = "name", placeholder = "Enter your name", class = "myInput")
        input(type="phone", name = "phone", placeholder = "Enter your phone no.", class = "myInput")
        input(type="email", name = "email", placeholder = "Enter your email", class = "myInput")
        input(type="text", name = "address", placeholder = "Enter your address", class = "myInput")
        input(type="text", name = "enquiry", placeholder = "Brief enquiry", class = "myInput")

        button(class = "btn")
        | Submit